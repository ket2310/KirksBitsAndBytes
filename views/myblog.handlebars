<div class="text-center">
    <input type="hidden" value="{{id}}" id="blogid" />
    <h2>{{title}}</h2>

    <p>Created by {{poster.name}} on {{format_date date_posted}}</p>

    <form class="form">
        <div class="row mb-2">
            <div class="col-md-8">
                <textarea id="content"  rows="4" cols="50"> {{content}}</textarea>
            </div>
            <div class="col-md-4">
                <button class="btn btn-light" id="update" type="submit">Update</button>
                &nbsp;
                <button class="btn btn-light" id="delete" type="submit">Delete</button>
            </div>
        </div>
    </form>
</div>
<script src="/js/myblog.js"></script>